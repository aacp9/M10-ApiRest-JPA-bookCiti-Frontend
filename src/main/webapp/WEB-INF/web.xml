<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>M10.ApiRest-JPA-BookCiti-Frontend</display-name>
	<jsp-config>
		<jsp-property-group>
			<url-pattern>/*</url-pattern>
			<page-encoding>UTF-8</page-encoding>
		</jsp-property-group>
	</jsp-config>
<!-- Se utiliza para ubicar las carpetas de recursos -->
<!-- con esta configarción  se puede utilizar carpetas para estilo, esta etiqueta permite que spring considere estas carpetas -->
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/css/*</url-pattern>
		<url-pattern>/img/*</url-pattern>
		<url-pattern>/js/*</url-pattern>
	</servlet-mapping>

<!-- acá también redirigimos al Home -->
	<welcome-file-list>
		 <welcome-file>Home.jsp</welcome-file> 
	</welcome-file-list>
</web-app>